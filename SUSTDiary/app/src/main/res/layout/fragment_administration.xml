<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.AdministrationFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/sust_logo"
            android:alpha="0.1"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Vice Chancellors of SUST"
                android:textColor="@color/textColorLight"
                android:textSize="18sp"
                android:fontFamily="@font/oswald_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGreyDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Senate"
                android:textColor="@color/textColorLight"
                android:textSize="18sp"
                android:fontFamily="@font/oswald_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGreyDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Syndicate"
                android:textColor="@color/textColorLight"
                android:textSize="18sp"
                android:fontFamily="@font/oswald_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGreyDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Academic Council"
                android:textColor="@color/textColorLight"
                android:textSize="18sp"
                android:fontFamily="@font/oswald_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGreyDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Advanced Studies Board"
                android:textColor="@color/textColorLight"
                android:textSize="18sp"
                android:fontFamily="@font/oswald_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGreyDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Finance Committee"
                android:textColor="@color/textColorLight"
                android:textSize="18sp"
                android:fontFamily="@font/oswald_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGreyDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Planning and Development Com."
                android:textColor="@color/textColorLight"
                android:textSize="18sp"
                android:fontFamily="@font/oswald_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGreyDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Deans"
                android:textColor="@color/textColorLight"
                android:textSize="18sp"
                android:fontFamily="@font/oswald_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGreyDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Head of Departments"
                android:textColor="@color/textColorLight"
                android:textSize="18sp"
                android:fontFamily="@font/oswald_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGreyDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Principal of Affiliated Colleges"
                android:textColor="@color/textColorLight"
                android:textSize="18sp"
                android:fontFamily="@font/oswald_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGreyDark" />

        </LinearLayout>

    </FrameLayout>

</ScrollView>
